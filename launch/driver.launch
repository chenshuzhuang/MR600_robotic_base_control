<?xml version="1.0"?>
<launch>
    <arg name="port" default="/dev/ttyUSB0" />
    <arg name="baud_rate" default="115200" />
    <arg name="control_rate" default="25" />
    <arg name="motion_model" default="2wd" /> <!-- 4wd/2wd -->
    <arg name="base_type" default="skid_steer" /> <!-- skid_steer/mecanum -->
    <arg name="odom_frame" default="odom" />
    <arg name="base_frame" default="base_link" />
    <arg name="publish_odom" default="true" />
    <arg name="publish_odom_trans" default="true" />
    <arg name="wheel_radius" default="0.098" />
    <arg name="wheel_bias" default="0.8" />
    <arg name="reduction_ratio" default="20" />

    <node pkg="robuster_driver" type="robuster_serial_node" name="robuster_serial_node"
        output="screen">
        <param name="port" value="$(arg port)" />
        <param name="baud_rate" value="$(arg baud_rate)" />
        <param name="control_rate" value="$(arg control_rate)" />
        <param name="motion_model" value="$(arg motion_model)" />
        <param name="base_type" value="$(arg base_type)" />
        <param name="odom_frame" value="$(arg odom_frame)" />
        <param name="base_frame" value="$(arg base_frame)" />
        <param name="publish_odom" value="$(arg publish_odom)" />
        <param name="publish_odom_trans" value="$(arg publish_odom_trans)" />
        <param name="wheel_radius" value="$(arg wheel_radius)" />
        <param name="wheel_bias" value="$(arg wheel_bias)" />
        <param name="reduction_ratio" value="$(arg reduction_ratio)" />
    </node>

    
</launch>